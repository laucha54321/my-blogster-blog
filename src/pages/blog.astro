---
import { readAll } from "../lib/markdoc/read";
import { blog } from "../lib/markdoc/frontmatter.schema";
import PageLayout from "../layouts/PageLayout.astro";
import PageMeta from "../components/PageMeta.astro";
import { SITE_TITLE } from "../config";

const posts = await readAll({
  directory: "blog",
  frontmatterSchema: blog,
});

const sortedPosts = posts
  .filter((p) => p.frontmatter.draft !== true)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.date).valueOf() -
      new Date(a.frontmatter.date).valueOf()
  );
---

<PageLayout>
  <PageMeta title={`Blog | ${SITE_TITLE}`} slot="meta" />
  <section slot="main">
    <h2 class="text-2xl font-bold mb-6 border-b pb-2">All Writings</h2>
    <div class="space-y-4">
      {
        sortedPosts.map((post) => {
          const formattedDate = new Date(
            post.frontmatter.date
          ).toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
          });
          return (
            <a
              href={post.frontmatter.external ? post.frontmatter.url : `/blog/${post.slug}`}
              target={post.frontmatter.external ? "_blank" : "_self"}
              class="block p-4 border rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition group"
            >
              <div class="flex justify-between items-start mb-2">
                <h3 class="font-semibold text-lg group-hover:text-text-link">
                  {post.frontmatter.title}
                  {post.frontmatter.external && (
                    <span class="ml-2 text-sm">
                      <i class="fa-solid fa-up-right-from-square" />
                    </span>
                  )}
                </h3>
                <time class="text-xs text-gray-500 whitespace-nowrap ml-4">
                  {formattedDate}
                </time>
              </div>
              {post.frontmatter.description && (
                <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">
                  {post.frontmatter.description}
                </p>
              )}
            </a>
          );
        })
      }
    </div>
  </section>
</PageLayout>